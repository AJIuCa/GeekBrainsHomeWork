    public static void start() throws Exception {

        Socket socket = new Socket(host, port);  // подключаемся по адресам к нашему серверу
        ObjectDecoderInputStream decoderStream = new ObjectDecoderInputStream(socket.getInputStream()); // создаём поток на дешифровку принятых объектов
        ObjectEncoderOutputStream encodeStream = new ObjectEncoderOutputStream(socket.getOutputStream()); // создаём поток на шифровку отправленных объектов

        try {

            BufferedReader reader = new BufferedReader(new InputStreamReader(System.in)); // сканер для записи в консоль
            String message = reader.readLine(); // сканер для записи в String содержания консоли
            SendMessage textMessage = new SendMessage(message); // создаём объект класса SendMsg и передаём в него текст написанный в консоли;
            encodeStream.writeObject(textMessage); // кодируем наш объект textMessage и отправляем его на сервер


//            System.out.println("A: " + str);
//            sc.close();
//            out.close();
//            socket.close();
        } catch (Exception e) {
            e.printStackTrace();
        }
    }